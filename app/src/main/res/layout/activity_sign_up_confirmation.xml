<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:onClick="backToSignUp"
                android:src="@drawable/ic_arrow_back_black_24dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/main4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            tools:context="pharaoh.com.weshare.ui.activities.activities.LoginActivity">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_logo02" />


            <TextView
                android:id="@+id/confirmation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="45dp"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text="@string/confirmation_message"
                android:textColor="#ffffff"
                android:textSize="30sp" />


            <EditText
                android:id="@+id/confirm_code"
                style="@style/App_EditTextStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="26dp"
                android:drawableStart="@drawable/ic_confirmation"
                android:hint="Type Confirmation Code"
                android:inputType="number" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>